@using BookingSite.ViewModels  
@model BookingSite.ViewModels.TicketOverviewViewModel  

<div>  
    <p>From: <br/>  
        @Model.FromAirport</p>   
    <p>To: <br/>  
        @Model.ToAirport</p>  
    <p>Transfers: <br/>  
        @Model.RouteSegments</p>  
    <p>Date: <br/>  
        @Model.Date</p>  
    <p>Price: <br/>  
        â‚¬ @Model.Price</p>  
    <p>Additional fees: </p>  
</div>  

<div>  
    <form asp-action="AddToShoppingCart" method="post">  
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(m => m.FlightId)

        <div>  
        <label>Mealchoice:</label>
            @Html.DropDownListFor(m => m.SelectedMeal, Model.Meals, "-- Select a meal --", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.SelectedMeal, "", new { @class = "text-danger" })
        </div>  

    <div>  
        <label>Travel class:</label>
            <select asp-for="SelectedSeatClass" class="form-control">
                @foreach (var item in Model.SeatClasses)  
            {  
                if (item.Available)  
                {  
                    <option value="@item.Id">@item.Name</option>  
                }  
                else  
                {  
                    <option value="@item.Id" disabled>@item.Name</option>
				}
            }  
        </select>
            @Html.ValidationMessageFor(m => m.SelectedSeatClass, "", new { @class = "text-danger" })
        </div>  

    <button type="submit">Add to shopping cart</button>  
</form>  
</div>