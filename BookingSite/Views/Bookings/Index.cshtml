@model IEnumerable<BookingSite.ViewModels.BookingWithTicketsViewModel>

@{
    ViewData["Title"] = "My Bookings";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 text-primary"><i class="bi bi-airplane me-2"></i> My Bookings</h1>
        <a asp-controller="FlightsOverview" asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-search"></i> Find New Flights
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="bi bi-suitcase text-muted" style="font-size: 5rem;"></i>
            </div>
            <h3 class="text-muted">You haven't made any bookings yet</h3>
            <p class="lead">Ready to plan your next adventure?</p>
            <a asp-controller="FlightsOverview" asp-action="Index" class="btn btn-primary btn-lg mt-3">
                <i class="bi bi-search"></i> Explore Available Flights
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var booking in Model)
            {
                <div class="col-12">
                    <div class="card shadow-sm h-100 booking-card">
                        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-0">
                                    <i class="bi bi-bookmark-check"></i>
                                    Booking #@booking.BookingId
                                </h5>
                                <small>@booking.CreatedAt.ToString("MMM dd, yyyy")</small>
                            </div>
                            <span class="badge bg-light text-primary rounded-pill px-3 py-2 d-flex align-items-center">
                                @booking.Tickets.Count @(booking.Tickets.Count == 1 ? "Ticket" : "Tickets")
                            </span>
                        </div>
                        <div class="card-body">
                            <div class="ticket-preview">
                                @foreach (var ticket in booking.Tickets.Take(2))
                                {
                                    <div class="ticket-item @(ticket.IsCancelled ? "cancelled" : "")">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="ticket-route">
                                                <div class="route-info">
                                                    <div class="airports">
                                                        <span class="airport-code">@ticket.FromAirport</span>
                                                        <i class="bi bi-arrow-right mx-2"></i>
                                                        <span class="airport-code">@ticket.ToAirport</span>
                                                    </div>
                                                    <div class="small text-muted">
                                                        <i class="bi bi-calendar-event me-1"></i> @ticket.Date.ToString("ddd, MMM d, yyyy")
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="ticket-details text-end">
                                                <div>
                                                    <span class="badge @(ticket.SeatClass == "First Class" ? "bg-warning" : "bg-info") text-white">@ticket.SeatClass</span>
                                                </div>
                                                <div class="small text-muted mt-1">
                                                    <i class="bi bi-cup-hot me-1"></i> @ticket.MealDescription
                                                </div>
                                            </div>
                                        </div>
                                        @if (ticket.IsCancelled)
                                        {
                                            <div class="cancelled-badge mt-2">
                                                <span class="badge bg-danger text-white">Cancelled</span>
                                            </div>
                                        }
                                    </div>
                                    <hr class="ticket-divider" />
                                }

                                @if (booking.Tickets.Count > 2)
                                {
                                    <div class="more-tickets text-center">
                                        <span class="badge bg-light text-primary">
                                            +@(booking.Tickets.Count - 2) more ticket@(booking.Tickets.Count - 2 == 1 ? "" : "s")
                                        </span>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-light">
                            <div class="d-flex justify-content-between align-items-center">
                                <a asp-controller="Bookings" asp-action="Details" asp-route-id="@booking.BookingId" class="btn btn-sm btn-outline-primary view-details-btn">
                                    <i class="bi bi-ticket-detailed"></i> View Details
                                </a>
                                <div class="fw-bold">
                                    Total: €@booking.TotalPrice
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .booking-card {
        border-radius: 0.5rem;
        overflow: hidden;
        margin-bottom: 1.5rem;
    }

    .ticket-item {
        padding: 1rem 0;
    }

    .ticket-divider {
        border-top: 1px dashed #dee2e6;
        margin: 0.5rem 0;
    }

    .airport-code {
        font-weight: bold;
        font-size: 1.1rem;
    }

    .route-info {
        display: flex;
        flex-direction: column;
    }

    .cancelled {
        opacity: 0.7;
    }

    .more-tickets {
        padding: 0.5rem 0;
    }

    .card-header .badge {
        height: 28px;
        line-height: 1;
    }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
}
