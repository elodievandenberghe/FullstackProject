@model IEnumerable<BookingSite.Domains.Models.Booking>

@{
    ViewData["Title"] = "My Bookings";
}

<h1>My Bookings</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Booking Reference
            </th>
            <th>
                Number of Tickets
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Tickets.Count
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">View Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>
