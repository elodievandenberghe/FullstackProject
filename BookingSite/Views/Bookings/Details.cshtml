@model BookingSite.Domains.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<h1>Booking Details</h1>

<div>
    <h4>Booking Reference: @Model.Id</h4>
    <hr />
    
    <h5>Tickets in this booking:</h5>
    
    @if (Model.Tickets != null && Model.Tickets.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Ticket ID</th>
                    <th>Flight</th>
                    <th>Seat</th>
                    <th>Meal</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model.Tickets)
                {
                    <tr>
                        <td>@ticket.Id</td>
                        <td>
                            @if (ticket.Flight != null)
                            {
                                @ticket.Flight.Id
                            }
                        </td>
                        <td>
                            @if (ticket.Seat != null)
                            {
                                @ticket.Seat.SeatNumber
                            }
                        </td>
                        <td>
                            @if (ticket.Meal != null)
                            {
                                @ticket.Meal.Description
                            }
                        </td>
                        <td>
                            @(ticket.IsCancelled == true ? "Cancelled" : "Active")
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No tickets found in this booking.</p>
    }
</div>

<div>
    <a asp-action="Index">Back to My Bookings</a>
</div>
