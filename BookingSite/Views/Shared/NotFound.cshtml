@{
    ViewData["Title"] = "Page Not Found";
    ViewData["TitleIcon"] = "question-circle";
}

<div class="card shadow-sm">
    <div class="card-body">
        <div class="text-center py-5">
            <div class="display-1 text-primary mb-4">
                <i class="bi bi-question-circle"></i>
            </div>
            <h2 class="mb-3">Page Not Found</h2>
            <p class="lead text-muted mb-4">
                We couldn't find the page you were looking for. It might have been removed, renamed,
                or it might never have existed.
            </p>
            <div class="mt-4">
                <a href="/" class="btn btn-primary">
                    <i class="bi bi-house me-2"></i>Return to Home Page
                </a>
            </div>
        </div>
    </div>
</div>