@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
    ViewData["TitleIcon"] = "exclamation-triangle";
}

<div class="text-center py-5">
    <div class="mb-4">
        <i class="bi bi-exclamation-triangle text-warning" style="font-size: 5rem;"></i>
    </div>
    <h3 class="text-warning">An error occurred</h3>
    <p class="lead">Something went wrong while processing your request.</p>

    @if (Model.ShowRequestId)
    {
        <p class="text-muted small mt-3">
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <a href="/" class="btn btn-primary btn-lg mt-3">
        <i class="bi bi-house me-2"></i>Return to Home Page
    </a>
</div>

@if (System.Diagnostics.Debugger.IsAttached ||
     Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
{
    <div class="card border-warning mt-4">
        <div class="card-header bg-warning-subtle">
            <h5 class="mb-0">
                <i class="bi bi-bug me-2"></i>Development Mode
            </h5>
        </div>
        <div class="card-body">
            <p>
                Swapping to <strong>Development</strong> environment will display more detailed information about the error that occurred.
            </p>
            <p class="mb-0">
                <strong>The Development environment shouldn't be enabled for deployed applications.</strong>
                It can result in displaying sensitive information from exceptions to end users.
                For local debugging, enable the <strong>Development</strong> environment by setting the
                <code>ASPNETCORE_ENVIRONMENT</code> environment variable to <strong>Development</strong>
                and restarting the app.
            </p>
        </div>
    </div>
}
