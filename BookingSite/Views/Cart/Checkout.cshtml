@model BookingSite.ViewModels.CartViewModel

@{
    ViewData["Title"] = "Checkout";
    ViewData["TitleIcon"] = "cart";
}

<div class="container mt-4">
    <h1 class="mb-4"><i class="fas fa-shopping-cart me-2"></i>Checkout</h1>

    @if (Model.Carts != null && Model.Carts.Any())
    {
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">Your Booking Summary</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Route</th>
                                <th>Date</th>
                                <th>Seat Class</th>
                                <th>Meal</th>
                                <th class="text-end">Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Carts)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-bold">@item.FromAirport → @item.ToAirport</div>
                                        <small class="text-muted">
                                            @item.FromAirport →
                                            @for (int i = 0; i < item.RouteSegments.Count; i++)
                                            {
                                                @item.RouteSegments[i]
                                                @if (i < item.RouteSegments.Count - 1)
                                                {
                                                    @: →
                                                }
                                            }
                                            → @item.ToAirport
                                        </small>
                                    </td>
                                    <td>@item.Date?.ToDateTime(TimeOnly.MinValue).ToString("MMM dd, yyyy")</td>
                                    <td>@item.SeatClassName</td>
                                    <td>@item.MealDescription</td>
                                    <td class="text-end">€@item.Price.ToString("F2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">Order Total</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h5>Total Amount:</h5>
                    <h5 class="fw-bold">€@Model.ComputeTotalValue().ToString("F2")</h5>
                </div>
                <hr>
                <div class="text-end">
                    <a asp-action="PurchaseComplete" asp-route-id="@Model" class="btn btn-primary btn-lg">
                        <i class="fas fa-credit-card me-2"></i>Complete Purchase
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>Your cart is empty. Please add flights to proceed with checkout.
        </div>
        <div class="mt-3">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-search me-2"></i>Browse Flights
            </a>
        </div>
    }
</div>
