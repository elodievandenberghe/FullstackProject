@model List<BookingSite.ViewModels.HotelViewModel>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var hotel in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@hotel.ImageUrl" class="card-img-top" alt="Hotel image" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@hotel.Name</h5>
                        <p class="card-text text-muted">@hotel.Address.AddressString</p>
                        <a href="@hotel.WebUrl" class="btn btn-primary mt-2">Book your room!</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>